<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="0.5dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="4dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@drawable/widget_view_card_bg">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/icon"
                    android:layout_width="68dp"
                    android:layout_height="68dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/icon_text"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="@drawable/svg_file_pdf"
                    android:gravity="center"
                    android:text="PDF"
                    android:textColor="@color/color_pdf"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="9dp"
                    android:layout_toRightOf="@+id/icon_text"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="15dp"
                    android:paddingRight="24dp"
                    android:text="12789fhdshfkdahfjkdsalhfjdskalfhdkshfjdksalfhjdksafhjsdkfhjaskdfhs"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_14dp"
                    android:textStyle="bold"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@+id/title"
                    android:layout_toRightOf="@+id/icon_text"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="15dp"
                    android:paddingRight="24dp"
                    android:text="12789fhdshfkdahfjkdsalhfjdskalfhdkshfjdksalfhjdksafhjsdkfhjaskdfhs"
                    android:textColor="@color/color_9B9B9B"
                    android:textSize="@dimen/text_size_12dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:id="@+id/touch_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <View
                        android:id="@+id/center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <View
                        android:id="@+id/right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon_drag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:visibility="gone"
        app:srcCompat="@drawable/svg_drag_icon"/>
</RelativeLayout>